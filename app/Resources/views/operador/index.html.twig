{% extends 'layout.html.twig' %}
{% block header %}
    <ul class="breadcrumb">
        <li>
            <i class="ace-icon fa fa-home home-icon"></i>
            <a href="{{path('homepage')}}">Dashboard</a>
        </li>
        <li class="active">Operador</li>
    </ul><!-- /.breadcrumb -->
{% endblock %}
{% block body %}
    <div class="page-header">
        <h1>
            Operador
            <small>
                <i class="ace-icon fa fa-angle-double-right"></i>
                Administraciòn de Operadores
            </small>
        </h1>
    </div>
    <div class="clearfix">
        <div class="pull-right tableTools-container">
            <div class="dt-buttons btn-overlap btn-group">
                <a href="{{ path('operador_new') }}" class="dt-button buttons-collection buttons-colvis btn btn-white btn-primary btn-bold"><i class="fa fa-file bigger-110 blue"></i></a>
            </div>
        </div>
    </div>
    <div class="table-header">
        Lista de operadores
    </div>

    <div class="table-responsive">
        <table class="table table-striped dataTable">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Ci</th>
                    <th>Paterno</th>
                    <th>Materno</th>
                    <th>Nombres</th>
                    <th>Usuario</th>
                    <th>Contraseña</th>
                    <th>Esactivo</th>
                    <th>Agencia</th>
                    <th>Área</th>
                    <th>Obs</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
            {% for operador in operadors %}
                <tr>
                    <td><a href="{{ path('operador_show', { 'id': operador.id }) }}">{{ operador.id }}</a></td>
                    <td>{{ operador.ci }}</td>
                    <td>{{ operador.paterno }}</td>
                    <td>{{ operador.materno }}</td>
                    <td>{{ operador.nombres }}</td>
                    <td>{{ operador.usuario }}</td>
                    <td>{{ operador.contrasena }}</td>
                    <td>{% if operador.esactivo %}Yes{% else %}No{% endif %}</td>
                    <td>{{operador.agencia.agencia}}</td>
                    <td>{{operador.areaTipo.areaTipo}}</td>
                    <td>{{ operador.obs }}</td>
                    <td>
                        <div class="hidden-sm hidden-xs action-buttons">
                            <a class="blue" href="{{ path('operador_show', { 'id': operador.id }) }}">
                                <i class="ace-icon fa fa-search-plus bigger-130"></i>
                            </a>

                            <a class="green" href="{{ path('operador_edit', { 'id': operador.id }) }}">
                                <i class="ace-icon fa fa-pencil bigger-130"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>            
    </div>
{% endblock %}
