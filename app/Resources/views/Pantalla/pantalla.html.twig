	<script>
		var xhr, xhr1, xhr2;
		var loops = 0;
		var nextVideo;
		var reproduciendo = 0;
		var anteriorticket = "";

		/* Reproductor de video */

		$(function() {

			// Actualizacion de tickets en pantalla
			function mostrarTickets(){
				var cantidad = $('#cantidad').val();
	            if (xhr2 && xhr2.readyState != 4) {
	                    xhr2.abort();
	            }
	            xhr2 = $.ajax({
	                    type: 'post',
	                    cache: false,
	                    data: {cantidad:cantidad},
	                    url: "{{ path('pantalla_next_ticket') }}",
	                    beforeSend: function () {

	                    },
	                    success: function (data) {
	                    	var ultimollamado = -1;
	                    	var ultimoticket = "";
	                    	for (var i = 0; i < data.cantidad; i++) {
	                    		$('#t'+i).empty();
	                    	}
	                    	for (var i = 0; i < data.cantidadTickets; i++) {
	                    		$('#t'+i).append(data.ticket[i].o_servicio_id+''+data.ticket[i].o_cliente_tipo_id+''+data.ticket[i].o_numeroticket+' -> ?');//+data.ticket[i].ventanilla);
	                    		if(data.ticket[i].o_ticket_estado_id == 1){
	                    			ultimollamado = i;
	                    			ultimoticket = data.ticket[i].o_servicio_id+''+data.ticket[i].o_cliente_tipo_id+''+data.ticket[i].o_numeroticket;
	                    		}
	                    	}
	                    	pintar(ultimollamado, ultimoticket, data.cantidadTickets);

	                    },
	                    statusCode: {
	                        500: function () {

	                        },
	                        404: function () {

	                        }
	                    }
	            });
	        }
	        setInterval(mostrarTickets, 7000);
	        setInterval(hora, 1000);
	        reproducirVideo();
	        
		});

		var pintar = function(ultimollamado, ultimoticket, cantidadTickets){
			if((ultimollamado != -1) && (ultimollamado == (cantidadTickets - 1))){
				//alert(anteriorticket+' - '+ultimoticket);
				if(anteriorticket != ultimoticket){
					document.getElementById('sonido').play();
					$('#t'+ultimollamado).animate({backgroundColor:"#4EC3E3"}, 200);
					$('#t'+ultimollamado).animate({backgroundColor:"#00372F"}, 200);
					$('#t'+ultimollamado).animate({backgroundColor:"#4EC3E3"}, 200);
					$('#t'+ultimollamado).animate({backgroundColor:"#00372F"}, 200);
					$('#t'+ultimollamado).animate({backgroundColor:"#4EC3E3"}, 200);
					$('#t'+ultimollamado).animate({backgroundColor:"#00372F"}, 200);
					$('#t'+ultimollamado).animate({backgroundColor:"#4EC3E3"}, 200);
					$('#t'+ultimollamado).animate({backgroundColor:"#00372F"}, 200);
					$('#t'+ultimollamado).animate({backgroundColor:"#4EC3E3"}, 200);
					$('#t'+ultimollamado).animate({backgroundColor:"#4EC3E3"}, 2000);
					$('#t'+ultimollamado).animate({backgroundColor:"#00372F"}, 200);
					anteriorticket = ultimoticket;
				}
			}
		}


		var hora = function(){
			$.ajax({
				type: 'post',
				cache: false,
				url: "{{ path('pantalla_hora') }}",
				beforeSend: function(){

				},
				success: function(data){
					$('#hora').empty();
					$('#hora').append(data.hora);
				}
			})
		}

		$('#reproductor').on('ended',function(){
			reproduciendo = 0;

			reproducirVideo();
		});

		var reproducirVideo = function(){
			var video = $('#videoNombre').val();
			if(video == "" || loops > 0){
				if (xhr && xhr.readyState != 4) {
		            xhr.abort();
		        }

		        var currentVideo = $('#reproductor').attr('src');

		        xhr = $.ajax({
		            type: 'post',
		            cache: false,
		            data: {currentVideo: currentVideo},
		            url: "{{ path('pantalla_next_video') }}",
		            beforeSend: function () {
						//$('#reproductor').attr('poster', 'img/poster-pantalla.gif');
		            },
		            success: function (data) {
		            	if(data.nextVideo != ""){
		            		if(reproduciendo == 0){
				                $('#reproductor').stop();
								$('#reproductor').attr('src', '/vid/' + data.nextVideo );
								$('#reproductor').play();
								$('#videoNombre').val(data.nextVideo);
								reproduciendo = 1;
							}
						}else{
							//loops = 0;
							reproduciendo = 0;
							$('#videoNombre').val(data.nextVideo);
							reproducirVideo();
						}
		            },
		            statusCode: {
		                500: function () {
		                	$('#videoNombre').val("");
		                	reproducirVideo();
		                },
		                404: function () {
		                	$('#videoNombre').val("");
		                }
		            }
		        });
		    }else{
		    	if(loops == 0){
		    		loops = loops + 1;
		    		nextVideo = '/vid/'+video;
					$('#reproductor').attr('src', nextVideo);
					$('#reproductor').play();
					reproduciendo = 1;
				}
		    }
		}

		/* animaciones marquesina */

		$('.marquee').marquee();

		$('.marquee').bind('finished', function(){
			if (xhr1 && xhr1.readyState != 4) {
	            xhr1.abort();
	        }
			var currentText = $('#text').val();

			xhr1 = $.ajax({
	            type: 'post',
	            cache: false,
	            data: {currentText: currentText},
	            url: "{{ path('pantalla_next_text') }}",
	            beforeSend: function () {
					$('.marquee').empty();
	            },
	            success: function (data) {
	            	$('.marquee').empty();
	                $('.marquee').text(data.nextText);
	                $('.marquee').marquee({
	                	duration: 15000
	                });
	                $('#text').val(data.nextText);
	            },
	            statusCode: {
	                500: function () {
	                	$('.marquee').empty();
	                	$('.marquee').text('');
	                	$('.marquee').marquee();
	                	$('#text').val('');
	                },
	                404: function () {
	                	$('.marquee').empty();
	                	$('.marquee').text('');
	                	$('.marquee').marquee();
	                	$('#text').val('');
	                }
	            }
	        });
		});

