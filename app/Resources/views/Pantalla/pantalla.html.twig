	                    }
	            });
	        }
	        setInterval(mostrarTickets, 8000);
	        setInterval(hora, 1000);
	        reproducirVideo();
	        
		});

		var hora = function(){
			$.ajax({
				type: 'post',
				cache: false,
				url: "{{ path('pantalla_hora') }}",
				beforeSend: function(){

				},
				success: function(data){
					$('#hora').empty();
					$('#hora').append(data.hora);
				}
			})
		}

		$('#reproductor').on('ended',function(){
			reproduciendo = 0;

			reproducirVideo();
		});

		var reproducirVideo = function(){
			var video = $('#videoNombre').val();
			if(video == "" || loops > 0){
				if (xhr && xhr.readyState != 4) {
		            xhr.abort();
		        }

		        var currentVideo = $('#reproductor').attr('src');

		        xhr = $.ajax({
		            type: 'post',
		            cache: false,
		            data: {currentVideo: currentVideo},
		            url: "{{ path('pantalla_next_video') }}",
		            beforeSend: function () {
						//$('#reproductor').attr('poster', 'img/poster-pantalla.gif');
		            },
		            success: function (data) {
		            	if(data.nextVideo != ""){
		            		if(reproduciendo == 0){
				                $('#reproductor').stop();
								$('#reproductor').attr('src', '/vid/' + data.nextVideo );
								$('#reproductor').play();
								$('#videoNombre').val(data.nextVideo);
								reproduciendo = 1;
							}
						}else{
							//loops = 0;
							reproduciendo = 0;
							$('#videoNombre').val(data.nextVideo);
							reproducirVideo();
						}
		            },
		            statusCode: {
		                500: function () {
		                	$('#videoNombre').val("");
		                	reproducirVideo();
		                },
		                404: function () {
		                	$('#videoNombre').val("");
		                }
		            }
		        });
		    }else{
		    	if(loops == 0){
		    		loops = loops + 1;
		    		nextVideo = '/vid/'+video;
					$('#reproductor').attr('src', nextVideo);
					$('#reproductor').play();
					reproduciendo = 1;
				}
		    }
		}

		/* animaciones marquesina */

		$('.marquee').marquee();

		$('.marquee').bind('finished', function(){
			if (xhr1 && xhr1.readyState != 4) {
