{% extends 'fullscreen.html.twig' %}
{% block stylesheets %}
	{{parent()}}
	<style>
		#cuerpo{
			width: 100%;
			height: 90%;
			min-height: 90%;
			background-color: #000000;
		}
		#video{
			width: 75%;
			min-width: 75%;
			height: 100%;
			background-color: #050202;
			float: left;
		}
		#logo{
			width: 100%;
			height: 20%;
		}
		#botones{
			width: 25%;
			min-width: 25%;
			height: 100%;
			background-color: #00372F;
			float: right;
		}
		#pie{
			width: 100%;
			height: 10%;
			min-height: 10%;
			background-color: #042A00;
			vertical-align: middle;
		}
		#texto{
			font-size: 3.5rem;
			color: #15CD00;
		}
		.marquee {
			display:flex;
			justify-content: center;
			align-content: center;
			flex-direction: column;

			width: 100%;
			height: 100%;
			font-size: 3.5rem;
			color: #FFFFFF;
		  	overflow: hidden;
		  	vertical-align: middle;
		}
		#hora{
			width: 100%;
			height: 40%;
			text-align: center;
			color: #AACDCF;
			font-size: 50px;
			padding-top: 30px;
		}
		.ticket{
			width: 100%;
			height: 20%;
			background-color: #00372F;
			border-top: 1px solid #006255;
			color: #FFFFFF;
			font-size: 40px;
			text-align: center;
			vertical-align: middle;
			float: left;
			border-right: 1px solid #006255;

			display:flex;
			justify-content: center;
			align-content: center;
			flex-direction: column;
		}
	
		.pintar{
			background-color: #0BA7E3;
		}
		.restaurar{
			background-color: #00372F;
		}
	</style>
{% endblock %}
{% block body %}
	<input type="hidden" id="agenciaId" value="{{agenciaId}}">
	<input type="hidden" id="cantidad" value="{{cantidad}}">
	<div id="content">
		<div id="cuerpo">
			<div id="video">
				<input type="hidden" id="videoNombre" value="{{firstVideo}}">
				<div id="logo" style="margin-left:20px"><img src="{{asset('img/logo.png')}}" alt="" style="heigth:80%;"></div>
				<video id="reproductor" width="100%" height="80%" autoplay="true" poster="{{asset('img/logo.png')}}"> </video>
			</div>
			<div id="botones">
				<button onclick="pintar(5,6)">Pintar</button>
				<div id="hora">
					
				</div>
				{% set cont = 0 %}
				{% for i in 0 .. cantidad - 1 %}
				    <div id="t{{i}}" class="ticket"></div>
				{% endfor %}
				<audio id="sonido" src="{{asset('audio/llamada.mp3')}}"></audio>

				<style>
				{% if cantidad == 3 %}
					#hora{
						height: 25%;
						font-size: 50px;
						padding-top: 30px;
					}
					.ticket{
						height: 25%;
						font-size: 55px;
					}
				{% endif %}
				{% if cantidad == 4 %}
					#hora{
						height: 20%;
						font-size: 50px;
						padding-top: 30px;
					}
					.ticket{
						height: 20%;
						font-size: 55px;
					}
				{% endif %}
				{% if cantidad == 5 %}
					#hora{
						height: 15%;
						font-size: 40px;
						padding-top: 30px;
					}
					.ticket{
						height: 17%;
						font-size: 40px;
					}
				{% endif %}
				{% if cantidad == 6 %}
					#hora{
						height: 16%;
						font-size: 30px;
						padding-top: 30px;
					}
					.ticket{
						height: 14%;
						font-size: 40px;
					}
				{% endif %}
				</style>
				
					

				

			</div>
		</div>
		<div id="pie">
			<!--marquee direction="left" scrolldelay="1" id="texto" loop="1">
				hola
			</marquee-->
			<div class='marquee' id="marquee"></div>
			<input type="hidden" id="text" value="">
		</div>
	</div>
{% endblock %}
