	                500: function () {
	                	$('.marquee').empty();
	                	$('.marquee').text('');
	                	$('.marquee').marquee();
	                	$('#text').val('');
	                },
	                404: function () {
	                	$('.marquee').empty();
	                	$('.marquee').text('');
	                	$('.marquee').marquee();
	                	$('#text').val('');
	                }
	            }
	        });
		});

