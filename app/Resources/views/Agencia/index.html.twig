{% extends 'layout.html.twig' %}

{% block body %}
    <div class="c-header">
        <h2>Agencias <small></small> </h2>
    </div>
    <div class="card">
        <div class="bar-options">
            <h3>Lista de agencias</h3>
            <a href="{{ path('agencia_new') }}" class="btn btn-primary">Crear Agencia</a>
        </div>
        <div class="table-responsive">
            <table>
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Agenciatipo</th>
                        <th>Agencia</th>
                        <th>Direccion</th>
                        <th>Telefono</th>
                        <th>Celular</th>
                        <th>Fechaapertura</th>
                        <th>Fechacierre</th>
                        <th>Obs</th>
                        <th>Anchobanda</th>
                        <th>Esactivo</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for agencium in agencias %}
                    <tr>
                        <td><a href="{{ path('agencia_show', { 'id': agencium.id }) }}">{{ agencium.id }}</a></td>
                        <td>{{ agencium.agenciaTipo }}</td>
                        <td>{{ agencium.agencia }}</td>
                        <td>{{ agencium.direccion }}</td>
                        <td>{{ agencium.telefono }}</td>
                        <td>{{ agencium.celular }}</td>
                        <td>{% if agencium.fechaApertura %}{{ agencium.fechaApertura|date('Y-m-d') }}{% endif %}</td>
                        <td>{% if agencium.fechaCierre %}{{ agencium.fechaCierre|date('Y-m-d') }}{% endif %}</td>
                        <td>{{ agencium.obs }}</td>
                        <td>{{ agencium.anchobanda }}</td>
                        <td>{% if agencium.esactivo %}Yes{% else %}No{% endif %}</td>
                        <td>
                            <ul>
                                <li>
                                    <a href="{{ path('agencia_show', { 'id': agencium.id }) }}" class="btn btn-primary">Ver</a>
                                </li>
                                <li>
                                    <a href="{{ path('agencia_edit', { 'id': agencium.id }) }}" class="btn btn-warning">Editar</a>
                                </li>
                            </ul>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
