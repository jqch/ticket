{% extends 'layout.html.twig' %}
{% block header %}
    <ul class="breadcrumb">
        <li>
            <i class="ace-icon fa fa-home home-icon"></i>
            <a href="{{path('dashboard')}}">Dashboard</a>
        </li>
        <li class="active">Agencia</li>
    </ul><!-- /.breadcrumb -->
{% endblock %}
{% block body %}
    <div class="page-header">
        <h1>
            Agencia
            <small>
                <i class="ace-icon fa fa-angle-double-right"></i>
                Gestión de Agencias
            </small>
        </h1>
    </div>
    <div class="card">

        <div class="clearfix">
            <div class="pull-right tableTools-container">
                <div class="dt-buttons btn-overlap btn-group">
                    <a href="{{ path('agencia_new') }}" class="dt-button buttons-collection buttons-colvis btn btn-white btn-primary btn-bold"><i class="fa fa-file bigger-110 blue"></i></a>
                </div>
            </div>
        </div>
        <div class="table-header">
            Lista de agencias registradas
        </div>
        <div class="table-responsive">
            <table class="table table-striped dataTable">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Agenciatipo</th>
                        <th>Código</th>
                        <th>Agencia</th>
                        <th>Direccion</th>
                        <th>Telefono</th>
                        <th>Celular</th>
                        <th>Fechaapertura</th>
                        <th>Fechacierre</th>
                        <th>Obs</th>
                        <th>Anchobanda</th>
                        <th>Esactivo</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for agencium in agencias %}
                    <tr>
                        <td><a href="{{ path('agencia_show', { 'id': agencium.id }) }}">{{ agencium.id }}</a></td>
                        <td>{{ agencium.agenciaTipo }}</td>
                        <td>{{ agencium.codigo }}</td>
                        <td>{{ agencium.agencia }}</td>
                        <td>{{ agencium.direccion }}</td>
                        <td>{{ agencium.telefono }}</td>
                        <td>{{ agencium.celular }}</td>
                        <td>{% if agencium.fechaApertura %}{{ agencium.fechaApertura|date('Y-m-d') }}{% endif %}</td>
                        <td>{% if agencium.fechaCierre %}{{ agencium.fechaCierre|date('Y-m-d') }}{% endif %}</td>
                        <td>{{ agencium.obs }}</td>
                        <td>{{ agencium.anchobanda }} kb</td>
                        <td>{% if agencium.esactivo %}Si{% else %}No{% endif %}</td>
                        <td>
                            <div class="hidden-sm hidden-xs action-buttons">
                                <a class="blue" href="{{ path('agencia_show', { 'id': agencium.id }) }}">
                                    <i class="ace-icon fa fa-search-plus bigger-130"></i>
                                </a>

                                <a class="green" href="{{ path('agencia_edit', { 'id': agencium.id }) }}">
                                    <i class="ace-icon fa fa-pencil bigger-130"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}
{% block javascripts %}
    
{% endblock %}
