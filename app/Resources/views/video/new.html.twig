{% extends 'layout.html.twig' %}
{% block header %}
    <ul class="breadcrumb">
        <li>
            <i class="ace-icon fa fa-home home-icon"></i>
            <a href="{{path('dashboard')}}">Dashboard</a>
        </li>
        <li class="">Video</li>
        <li class="active">Subir</li>
    </ul><!-- /.breadcrumb -->
{% endblock %}
{% block body %}
    <div class="page-header">
        <h1>
            Video
            <small>
                <i class="ace-icon fa fa-angle-double-right"></i>
                Subir nuevo video
            </small>
        </h1>
    </div>
    <div class="clearfix">
            <div class="pull-right tableTools-container">
                <div class="dt-buttons btn-overlap btn-group">
                    <a href="{{ path('video_index') }}" class="dt-button buttons-collection buttons-colvis btn btn-white btn-primary btn-bold"><i class="fa fa-hand-o-left bigger-110 blue"></i></a>
                </div>
            </div>
    </div>
    <div class="table-header">
        Subir video
    </div>
    <div class="alert alert-info">
        <i class="fa fa-info-circle"></i> Se recomienda subir videos en formato .mp4
    </div>
        <div class="col-lg-12 col-md-12">
                <form action="{{path('video_new')}}" method="post" class="form-horizontal" enctype="multipart/form-data">
                    <div class="form-group">
                        <label for="">{{form_label(form.agencia)}}</label>
                        {{form_widget(form.agencia)}}
                    </div>
                    <div class="form-group">
                        <label for="">Video</label>
                        <input type="file" name="video">
                    <hr>
                    <button type="submit" class="btn btn-white btn-info btn-bold"><i class="fa fa-upload green"></i> Subir</button>
                </form>
        </div>
{% endblock %}
